      <section class="mt-50 mb-50">
         <div class="container">
            <div class="card">
               <div class="card-header">
                  <h2>Editando artigo</h2>
               </div>
               <div class="card-body">
                  <form method="post" action="/admin/articles/update">
                     <input type="hidden" name="id" value="<%= article.id %>"/>
                     <div class="form-group">
                        <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo" value="<%= article.title %>">
                     </div>
                     <div class="form-group">
                        <select name="category" class="form-control">
                           <option value="">Selecione a categoria</option>
                           <% categories.forEach(category => { %>
                              <option <% if(category.id == article.categoryId) { %> selected <% } %> value="<%= category.id %>"><%= category.title %></option>
                           <% }) %>
                        </select>
                     </div>
                     <div class="form-group">
                        <textarea class="form-control" name="body" id="editor" rows="15" placeholder="Escreva o artigo aqui!">
                           <%= article.body %>
                        </textarea>
                     </div>
                     <button class="btn btn-default">Atualizar</button>
                  </form>
               </div>
            </div>
         </div>
      </section>
<%- include('../../partials/footer.ejs') %>